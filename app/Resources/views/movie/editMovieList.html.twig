{% extends 'base.html.twig' %}

{% block title %}ŚF - Lista filmów [Aktualizacja]{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="header">
            <h1>Panel administratora - edycja filmów:</h1>

            <ul>
                {% for movie in movieList %}
                    <li><a href="{{ path('updateMovie', {'id': movie.id}) }}">{{ movie.id }}: {{ movie.title }}</li>
                {% endfor %}
            </ul>
            <a href="{{ path('admin') }}">Powrót do: Panel administratora</a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}